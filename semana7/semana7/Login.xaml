<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana7.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA LOGIN" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar Sesión" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>